<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.bvb.mydemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <application
        android:name="de.bvb.mydemo.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="de.bvb.mydemo.ui.activity.SettingsActivity" >
        </activity>
        <activity android:name="de.bvb.mydemo.ui.activity.DetailActivity"></activity>
        <activity android:name="de.bvb.mydemo.ui.activity.SearchActivity"></activity>
        <activity  android:name="de.bvb.mydemo.ui.activity.FeedbackActivity"></activity>
    </application>

</manifest>